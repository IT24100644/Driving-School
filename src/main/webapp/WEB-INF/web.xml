<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InstructorServlet</servlet-name>
        <servlet-class>servlet.InstructorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InstructorServlet</servlet-name>
        <url-pattern>/instructor/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LessonServlet</servlet-name>
        <servlet-class>servlet.LessonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LessonServlet</servlet-name>
        <url-pattern>/lesson/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>views/auth/login.jsp</welcome-file>
    </welcome-file-list>
</web-app>